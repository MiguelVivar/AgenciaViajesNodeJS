extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.m-t #{pagina}
        blockquote.text-center Lee sobre nuestros Clientes y sus Experiencias
        include ./layout/bloqueTestimoniales
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col 
                .col-md-8 
                    form(action='/testimoniales' method='POST')
                        .form-group
                            label(for='nombre') Nombre
                            input#nombre.form-control(type='text' name='nombre' placeholder='Tu Nombre' class="form-control" value= nombre)
                        .form-group
                            label(for='correo') Correo
                            input#correo.form-control(type='email' name='correo' placeholder='Tu Correo' value= correo)
                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje.form-control(name='mensaje' placeholder='Tu Mensaje' rows=3)= mensaje
                        input.btn.btn-success.btn-block(type='submit' value='Agregar')